<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
{{>header}}
<div id="tablePage">
    <div class="container">
        <div class="row">
            <h1 class="col text-center mt-4">
                My Vehicles
            </h1>
        </div>
    </div>
    <div class="limiter">
        <div class="container-table100">
            <div class="wrap-table100">
                <div class="table100 ver5 m-b-110">
                    <div class="table100-head">
                        <table>
                            <thead>
                                <tr class="row100 head">
                                    <th class="cell100 column1">Vehicle Name</th>
                                    <th class="cell100 column2">Description</th>
                                    <th class="cell100 column3">Vehicle Type</th>
                                    <th class="cell100 column4">License Plate</th>
                                    <th class="cell100 column5">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <div class="table100-body">
                        <table>
                            <tbody>
                                {{#each data}}
                                <tr class="row100 body">
                                    <td class="cell100 column1">{{this.name}}</td>
                                    <td class="cell100 column2">{{this.description}}</td>
                                    <td class="cell100 column3">{{this.vehicleType}}</td>
                                    <td class="cell100 column4">{{this.plate}}</td>
                                    <td class="cell100 column5" data-id="{{this._id}}">

                                        {{#when this.status 'eq' 0}}
                                        <button class="btn btn-sm btn-success mr-1 login" data-id="0">Login</button>
                                        {{/when}}
                                        {{#when this.status 'eq' 2}}
                                        <button class="btn btn-sm btn-success mr-1 logout" data-id="2">Logout</button>
                                        {{/when}}
                                        {{#when this.status 'eq' 1}}
                                        <button disabled class="btn btn-sm btn-secondary mr-1">Pending</button>
                                        {{/when}}

                                        <button class="btn btn-sm btn-danger ml-1 delete">Delete</button>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}

<script>
    $(function () {

        $('.delete').click(function () {
            let id = $(this).parent().data("id");
            $.ajax({
                type: "POST",
                url: "/my-vehicles/delete",
                data: JSON.stringify({
                    "id": id
                }),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    
                    Swal.fire(
                        'Deleted!',
                        'Page will reload...',
                        'success'
                    )
                    setTimeout(function () {
                        location.href = "/my-vehicles";
                    }, 2000);
                },
            });
        });

        $('.login, .logout').click(function () {
            
            let id = $(this).parent().data("id");
            let button_type = parseInt($(this).data("id"));
            let message, success_msg;
            if (button_type == 0) {
                message = "Type in Organization name: ";
                success_msg = 'Request to Login Sent!';
                operation = 1;
            } else if (button_type == 2) {
                message = "Which organization has your car: "
                success_msg = 'Request to Logout Sent!';
                operation = 2
            }
            let name = prompt(message);
            let found = false

            $.ajax({
                type: "POST",
                url: "/request/find-org",
                data: JSON.stringify({
                    "username": name
                }),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    if (response.data) {
                        Swal.fire(
                            "Organization found!",
                            '',
                            'success'
                        )
                        
                        $.ajax({
                            type: "POST",
                            url: "/request/create",
                            data: JSON.stringify({
                                "id": id,
                                "target": name,
                                "operation": operation
                            }),
                            contentType: "application/json; charset=utf-8",
                            success: function (response) {
                                Swal.fire(
                                    success_msg,
                                    'Page will reload...',
                                    'success'
                                )
                                setTimeout(function () {
                                    location.href = "/my-vehicles";
                                }, 2000);
                            },
                        });
                    }
                }
            });
        });

    });

</script>